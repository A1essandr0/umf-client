{
  "compilerOptions" : {
    "outDir": "./dist",
    "esModuleInterop" : true,
    "sourceMap" : true,
    "noImplicitAny" : false, // true for prod
    // "strict": true,
    "module" : "commonjs",
    "target" : "es6",
    "lib" : [ "es2015", "es2017", "dom" ],
    "removeComments" : true,
    "jsx" : "react",
    "allowJs" : true,
    "baseUrl" : "./",
    "paths" : { "components/*" : [ "src/components/*" ] }
  }
}